<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeliveryManager" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sub_main</item>
        <item name="colorSecondaryVariant">@color/sub_main</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="toolbarStyle">@style/Theme.ClothIt.ActionBar</item>-->
<!--        <item name="buttonStyle">@style/Theme.ClothIt.LongBtn</item>-->
<!--        <item name="editTextStyle">@style/Theme.ClothIt.LoginEdit</item>-->
    </style>

    <!-- Splash Screen 12-->
    <style name="Theme.DeliveryManager.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_background</item>
        <item name="postSplashScreenTheme">@style/Theme.DeliveryManager</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <style name="Theme.DeliveryManager.RoundBox" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/box_round</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/notosanskrmedium</item>
        <item name="android:textColor">@color/sub_main</item>

    </style>


</resources>